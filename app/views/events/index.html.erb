<p id="notice"><%= notice %></p>
<div class="container">
    <h1>Events</h1>

    <br>


  <div class="row">
    <% @events.each do |event|%>
        <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <h4 class="card-header"><%= event.name %></h4>
                <div class="card-body">
                    <p class="card-text">Discipline : <%= event.discipline %> </br>Description : <%= event.description %></br> Date: <%= event.date %></br> Description : <%= event.description %> </br> Nombre de personnes invitatees: <%= event.eleattendees.count %>  </p>
                </div>
                <div class="card-footer">
                <p> <%= link_to 'Voir l evenement', event_path(event) %> </p>
                </div>
        </div>
        </div>
    <% end %>
  </div>
</div>